<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
 

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
            <item name="android:actionBarStyle">@style/MyActionBar</item>
            <item name="android:typeface">monospace</item>
            <item name="android:windowActionBar">false</item>
<item name="android:windowTitleSize">0dp</item>
             
 
            

      
            
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#FFFFFFFF</item>
         <item name="android:actionBarTabStyle">@style/ActionBarTabs</item>
         <item name="android:dialogTheme">@style/CustomDialogTheme</item>
         <item name="android:actionBarSize">20dip</item>
         <item name="android:typeface">monospace</item>
         
        
        
    </style>
    
        <style name="ActionBarTabs" parent="@android:style/Widget.Holo.ActionBar.TabView">
    <item name="android:minHeight">20dp</item>
    <item name="android:background">@drawable/actionbar_tab_indicator</item>
    <item name="android:height">20dp</item>
    
</style>  
    

    
    <style name="Theme.MyAppTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">#00000000</item>
   
    </style>    
    
    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
    <item name="android:windowTitleStyle">@style/dialog_title_style</item>
    
    
  </style>

<style name="dialog_title_style">
    <item name="android:textColor">@color/mycolor1</item>
    <item name="android:textSize">14sp</item>
    <item name="android:background">@color/White</item>
    <item name="android:windowTitleSize">20dp</item>
    
   
</style>



</resources>
