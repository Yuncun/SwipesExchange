    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <android.support.v4.view.ViewPager
    android:id="@+id/v_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

    <fragment android:name="com.swipesexchange.NewListingFragment"
          android:id="@+id/new_listing_fragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
    <fragment android:name="com.swipesexchange.NewListingFragmentBuy"
          android:id="@+id/new_listing_fragment_buy"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />

</LinearLayout>