    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <fragment android:name="com.swipesexchange.SelectionFragment"
          android:id="@+id/selection_fragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
    <fragment android:name="com.swipesexchange.LoginFragment"
          android:id="@+id/splash_fragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
     <fragment android:name="com.facebook.widget.UserSettingsFragment"
          android:id="@+id/userSettingsFragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
</LinearLayout>


