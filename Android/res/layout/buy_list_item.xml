<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    
    android:minHeight="85dp"
     >
     
        <ImageView
        android:id="@+id/fb_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
       
        android:scaleType="centerCrop"
         />
        
             <TextView
        android:id="@+id/expiration_time"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text=">22.5h"
        android:layout_below="@id/fb_pic"
        android:textSize="12sp"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:textStyle="bold"
        android:paddingTop="5dp"
       
        android:gravity="center" />
     
    <RelativeLayout
        android:id="@+id/buy_listing_top_bar"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/fb_pic"
        
        >
        
        <TextView
        android:id="@+id/buy_listing_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="[Default Name]"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:padding="2dp"
        android:gravity="center"/>
            
        <TextView
        android:id="@+id/buy_listing_time_created"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Time Created"
        
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:padding="2dp"
        android:gravity="center" />
        
        
 
        
        
    </RelativeLayout>


    
  


    <RelativeLayout
        android:id="@+id/description_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/buy_listing_top_bar"
        android:layout_toRightOf="@id/fb_pic"
        android:paddingLeft="5dp">
    
             <TextView
        android:id="@+id/firstLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2dp"
        android:padding="1dp"
        android:layout_marginRight="5dp"
        android:singleLine="false"
         android:maxLines="2"
          android:ellipsize="end"
        android:text="Description"
        android:textSize="12sp" />

    </RelativeLayout>
     

  
        
          <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_bar"
        android:layout_marginTop="2dp"
       
        android:paddingBottom="4dp"
        android:layout_marginLeft="45dp"
        
      >
        
        <LinearLayout
        android:id="@+id/box_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:padding="2dp"
        android:visibility="gone" >

              <TextView
                  android:id="@+id/box_1_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                 
                  android:text="Venue"
                  android:textSize="12sp"
                  android:textStyle="bold" />

    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/box_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="@drawable/rectangle"
        android:layout_toRightOf="@id/box_1"
        android:layout_marginLeft="10dp"
        android:visibility="gone" >

              <TextView
                  android:id="@+id/box_2_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Venue"
                  android:textSize="12sp"
                  android:textStyle="bold" />

    </LinearLayout>
    
      <LinearLayout
        android:id="@+id/box_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_toRightOf="@id/box_2"
        android:padding="2dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone" >

              <TextView
                  android:id="@+id/box_3_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Venue"
                  android:textSize="12sp"
                  android:textStyle="bold" />

    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/box_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/box_3"
        android:background="@drawable/rectangle"
        android:padding="2dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone" >

              <TextView
                  android:id="@+id/box_4_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Venue"
                  android:textSize="12sp"
                  android:textStyle="bold" />

    </LinearLayout>
    
 

    </RelativeLayout>
        
                 <ImageView
        android:id="@+id/forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_action_next_item" />

  


</RelativeLayout>