<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:padding="5dip" >

    <TextView
        android:id="@+id/firstLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingTop="0dp"
        android:text="Example application"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_action_next_item" />

    <TextView
        android:id="@+id/secondLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstLine"
        android:paddingLeft="5dp"
        android:text="Description"
        android:textColor="#808080"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/thirdLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/secondLine"
        android:paddingLeft="2dp"
        android:textColor="#808080"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/boxSell"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@id/forward"
        android:background="@drawable/rectangle"
        android:paddingTop="0dp" >

        <TextView
            android:id="@+id/firstLineRight"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Number requested"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/secondLineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/boxSell"
        android:paddingRight="25dp"
        android:textColor="#808080"
        android:textSize="12sp" />

</RelativeLayout>