<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="85dp"
     >
     
        <ImageView
        android:id="@+id/fb_pic_ds"
        android:layout_width="40dp"
        android:layout_height="40dp"
       
        android:scaleType="centerCrop"
         />
        
             <TextView
        android:id="@+id/expiration_time_ds"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:text=">4.5h"
        android:layout_below="@id/fb_pic_ds"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingLeft="2dp"
        android:gravity="center" />
     
    <RelativeLayout
        android:id="@+id/buy_listing_top_bar_ds"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/fb_pic_ds"
        
        >
        
        <TextView
        android:id="@+id/buy_listing_name_ds"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="[Default Name]"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:padding="2dp"
        android:gravity="center"/>
            
        <TextView
        android:id="@+id/buy_listing_time_created_ds"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Time Created"
        
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:padding="2dp"
        android:gravity="center" />
        
        
 
        
        
    </RelativeLayout>


    
  


    <RelativeLayout
        android:id="@+id/description_bar_ds"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/buy_listing_top_bar_ds"
        android:layout_toRightOf="@id/fb_pic_ds"
        android:paddingLeft="5dp">
    
             <TextView
        android:id="@+id/firstLine_ds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2dp"
        android:padding="1dp"
        android:layout_marginRight="5dp"
        android:singleLine="false"
        android:text="Description"
        android:textSize="12sp" />

    </RelativeLayout>
     

  
        
          <RelativeLayout 
              android:id="@+id/boxes_bar_ds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_bar_ds"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="4dp"
        android:layout_marginLeft="45dp"
        
      >
        
        <LinearLayout
        android:id="@+id/box_1_ds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:padding="2dp"
        android:visibility="gone" >

              <TextView
                  android:id="@+id/box_1_text_ds"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                 
                  android:text="Venue"
                  android:textSize="12sp"
                  android:textStyle="bold" />

    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/box_2_ds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="@drawable/rectangle"
        android:layout_toRightOf="@id/box_1_ds"
        android:layout_marginLeft="10dp"
        android:visibility="gone" >

              <TextView
                  android:id="@+id/box_2_text_ds"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Venue"
                  android:textSize="12sp"
                  android:textStyle="bold" />

    </LinearLayout>
    
      <LinearLayout
        android:id="@+id/box_3_ds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_toRightOf="@id/box_2_ds"
        android:padding="2dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone" >

              <TextView
                  android:id="@+id/box_3_text_ds"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Venue"
                  android:textSize="12sp"
                  android:textStyle="bold" />

    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/box_4_ds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/box_3_ds"
        android:background="@drawable/rectangle"
        android:padding="2dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone" >

              <TextView
                  android:id="@+id/box_4_text_ds"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Venue"
                  android:textSize="12sp"
                  android:textStyle="bold" />

    </LinearLayout>
    
 

    </RelativeLayout>
        
    

  



 

	       <Button
            android:id="@+id/delete_listing_button"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:padding="2dp"
            android:layout_below="@id/boxes_bar_ds"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/White"
            android:background="@drawable/rectangle_red"
            android:text="Delete Listing"
          />
	       
	         <View
         android:layout_width="match_parent"
         android:layout_height="2dp"
         android:layout_above="@id/delete_listing_button"
         android:background="@color/light_grey"
         android:layout_marginBottom="5dp"
         />
     
 <RelativeLayout 
     android:layout_width="match_parent"
     android:layout_height="5dp"
     android:layout_below="@id/delete_listing_button"></RelativeLayout>
  
     

   



</RelativeLayout>