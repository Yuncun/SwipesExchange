<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:maxHeight="60dip"
    android:minHeight="60dip" >

    <TextView
        android:id="@+id/sender_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="5dp"
        android:paddingTop="0dp"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sender_name"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#808080"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/expand_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingTop="5dp"
        android:scaleX=".75"
        android:scaleY=".75"
        android:src="@drawable/ic_action_next_item" />

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/message_text"
        android:layout_toLeftOf="@+id/expand_message"
        android:paddingTop="8dp"
        android:text="1:01PM"
        android:textSize="12sp" />
    <LinearLayout
        android:id="@+id/trashButton_layout"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/half_rounded_rectangle_left"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        
        >
           <ImageView
        android:id="@+id/trashButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_gravity="center"
        android:background="@drawable/x_mark_m"
        android:scaleX=".5"
        android:scaleY=".5"
         />
        </LinearLayout>
        
    <ImageView 
        android:id="@+id/blue_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/blue_dot"
        />
    
 


</RelativeLayout>