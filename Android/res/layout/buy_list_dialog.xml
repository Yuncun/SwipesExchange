<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="85dp"
     >
     
        <ImageView
        android:id="@+id/fb_pic_d"
        android:layout_width="40dp"
        android:layout_height="40dp"
       
        android:scaleType="centerCrop"
         />
        
             <TextView
        android:id="@+id/expiration_time_d"
       android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text=">22.5h"
        android:layout_below="@id/fb_pic_d"
        android:textSize="12sp"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:gravity="center" />
     
    <RelativeLayout
        android:id="@+id/buy_listing_top_bar_d"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:focusable="true" 
        android:focusableInTouchMode="true" 
        android:layout_toRightOf="@id/fb_pic_d"
        
        >
        
        <TextView
        android:id="@+id/buy_listing_name_d"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="[Default Name]"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:padding="2dp"
        android:gravity="center"/>
            
        <TextView
        android:id="@+id/buy_listing_time_created_d"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Time Created"
        
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:padding="2dp"
        android:gravity="center" />
        
        
 
        
        
    </RelativeLayout>


    
  


    <RelativeLayout
        android:id="@+id/description_bar_d"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/buy_listing_top_bar_d"
        android:layout_toRightOf="@id/fb_pic_d"
        android:paddingLeft="5dp">
    
             <TextView
        android:id="@+id/firstLine_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2dp"
        android:padding="1dp"
        android:layout_marginRight="5dp"
        android:singleLine="false"
        android:text="Description"
        android:textSize="12sp" />

    </RelativeLayout>
     

  
        
          <RelativeLayout 
              android:id="@+id/boxes_bar_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_bar_d"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="30dp"
        android:paddingBottom="4dp"
        android:layout_marginLeft="45dp"
        
      >
        
        <LinearLayout
        android:id="@+id/box_1_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:padding="2dp"
        android:visibility="gone" >

              <TextView
                  android:id="@+id/box_1_text_d"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textColor="@color/White"
                  android:text="Venue"
                  android:textSize="12sp"
                  android:textStyle="bold" />

    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/box_2_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="@drawable/rectangle"
        android:layout_toRightOf="@id/box_1_d"
        android:layout_marginLeft="10dp"
        android:visibility="gone" >

              <TextView
                  android:id="@+id/box_2_text_d"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                   android:textColor="@color/White"
                  android:text="Venue"
                  android:textSize="12sp"
                  android:textStyle="bold" />

    </LinearLayout>
    
      <LinearLayout
        android:id="@+id/box_3_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_toRightOf="@id/box_2_d"
        android:padding="2dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone" >

              <TextView
                  android:id="@+id/box_3_text_d"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                   android:textColor="@color/White"
                  android:text="Venue"
                  android:textSize="12sp"
                  android:textStyle="bold" />

    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/box_4_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/box_3_d"
        android:background="@drawable/rectangle"
        android:padding="2dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone" >

              <TextView
                  android:id="@+id/box_4_text_d"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                   android:textColor="@color/White"
                  android:text="Venue"
                  android:textSize="12sp"
                  android:textStyle="bold" />

    </LinearLayout>
    
 

    </RelativeLayout>
        
    

  



 

	       <Button
            android:id="@+id/chatSendButton_d"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/boxes_bar_d"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/mycolor1"
            android:background="@android:color/transparent"
            android:text="Send"
          />
     
      <EditText
            android:id="@+id/messageEdit_d"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/boxes_bar_d"
            android:layout_marginBottom="4dp"
            android:padding="2dp"
            android:layout_toLeftOf="@id/chatSendButton_d"
            android:hint="Make a deal!"
            android:background="@drawable/message_input_box"
            android:layout_marginLeft="4dp"
            android:inputType="textMultiLine"
            android:maxHeight="140dp"
            android:maxLength="2000"
            android:minLines="2"
            android:scrollbars="vertical"
            android:textSize="12sp"
            />
  
     <View
         android:layout_width="match_parent"
         android:layout_height="2dp"
         android:layout_above="@id/messageEdit_d"
         android:background="@color/light_grey"
         android:layout_marginBottom="5dp"
         />

   



</RelativeLayout>