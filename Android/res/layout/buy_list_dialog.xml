<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
     >
     
    <RelativeLayout
        android:id="@+id/buy_listing_top_bar_d"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/light_grey"
        android:focusable="true" 
        android:focusableInTouchMode="true" 
        >
        
        <TextView
        android:id="@+id/buy_listing_name_d"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="[Default Name]"
        android:textSize="12sp"
        android:textColor="@color/theme_black"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:padding="2dp"
        android:gravity="center"/>
            
        <TextView
        android:id="@+id/buy_listing_time_created_d"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Time Created"
        android:textSize="12sp"
        android:textColor="@color/theme_black"
        android:textStyle="italic"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:padding="2dp"
        android:gravity="center" />
            
  
        
        
    </RelativeLayout>

    <ImageView
        android:id="@+id/fb_pic_d"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/buy_listing_top_bar_d"
        android:scaleType="centerCrop"
         />
    
      <RelativeLayout
        android:id="@+id/description_bar_d"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="40dp"
        android:layout_below="@id/buy_listing_top_bar_d"
        android:layout_toRightOf="@id/fb_pic_d">
         <TextView
        android:id="@+id/expiration_time_d"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:text=">4.5h"
        android:textColor="@color/theme_black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:padding="1dp"
        android:gravity="center"
        android:background="@drawable/rectange_bottom_right" />
         
             <TextView
        android:id="@+id/firstLine_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2dp"
        android:padding="1dp"
        android:singleLine="false"
         android:textColor="@color/theme_black"
        android:text="Description"
        android:textSize="12sp" />
             
    
 
        

    </RelativeLayout>
    
                   <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
          android:ellipsize="end"
          android:layout_below="@id/description_bar_d">
            
               <View android:layout_width="fill_parent"
   	 	android:layout_height="1dp"
   	 	
   	 	
		android:background="@color/light_grey" />
            
            
        </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/boxes_bar_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_bar_d"
        android:layout_marginTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginLeft="20dp"
        
      >
        
        <LinearLayout
        android:id="@+id/box_1_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:padding="2dp"
        android:visibility="gone" >

              <TextView
                  android:id="@+id/box_1_text_d"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textColor="@color/theme_black"
                  android:text="Venue"
                  android:textSize="12sp"
                  android:textStyle="bold" />

    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/box_2_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="@drawable/rectangle"
        android:layout_toRightOf="@id/box_1_d"
        android:layout_marginLeft="10dp"
        android:visibility="gone" >

              <TextView
                  android:id="@+id/box_2_text_d"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textColor="@color/theme_black"
                  android:text="Venue"
                  android:textSize="12sp"
                  android:textStyle="bold" />

    </LinearLayout>
    
      <LinearLayout
        android:id="@+id/box_3_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_toRightOf="@id/box_2_d"
        android:padding="2dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone" >

              <TextView
                  android:id="@+id/box_3_text_d"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textColor="@color/theme_black"
                  android:text="Venue"
                  android:textSize="12sp"
                  android:textStyle="bold" />

    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/box_4_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/box_3_d"
        android:background="@drawable/rectangle"
        android:padding="2dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone" >

              <TextView
                  android:id="@+id/box_4_text_d"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textColor="@color/theme_black"
                  android:text="Venue"
                  android:textSize="12sp"
                  android:textStyle="bold" />

    </LinearLayout>

    </RelativeLayout>

	       <Button
            android:id="@+id/chatSendButton_d"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/boxes_bar_d"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/mycolor1"
            android:background="@android:color/transparent"
            android:text="Send"
          />
     
      <EditText
            android:id="@+id/messageEdit_d"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/boxes_bar_d"
            android:layout_marginBottom="4dp"
            android:padding="2dp"
            android:layout_toLeftOf="@id/chatSendButton_d"
            android:hint="Make a deal!"
            android:background="@drawable/message_input_box"
            android:layout_marginLeft="4dp"
            android:inputType="textMultiLine"
            android:maxHeight="140dp"
            android:maxLength="2000"
            android:minLines="2"
            android:scrollbars="vertical"
            android:textSize="12sp"
            />
  
     

   



</RelativeLayout>